<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".pasien.HasilScanPasienFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_top"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/tombol_kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="HASIL SCAN"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="138dp"
            android:src="@drawable/rectangle_hasil_scan1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="14sp"
            android:layout_marginTop="160dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="Keparahan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="32sp"
            android:layout_marginTop="200dp"
            android:textColor="#00BF13"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="335dp"
            android:src="@drawable/rectangle_hasil_scan2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="14sp"
            android:layout_marginTop="369dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="Tips Pengobatan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_light"
            android:textSize="14sp"
            android:layout_marginTop="400dp"
            android:textColor="#00BF13"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="680dp"
            android:background="@drawable/tombol_simpan_histori"/>


    </RelativeLayout>
</ScrollView>